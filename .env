# =====================
# Database
# =====================
MONGODB_URI=mongodb://localhost:27017/ears
# Or, for some scripts:
MONGO_URI=mongodb://localhost:27017/ears

# =====================
# JWT / Authentication
# =====================
JWT_SECRET=your_jwt_secret_here
# Optional (defaults: 900 for access, 604800 for refresh)
JWT_ACCESS_TOKEN_EXPIRATION_SECONDS=900
JWT_REFRESH_TOKEN_EXPIRATION_SECONDS=604800

# =====================
# AWS S3 (for production file uploads)
# =====================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_s3_bucket_name

# =====================
# Email / SMTP
# =====================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM="EARS <noreply@example.com>"

# =====================
# App URLs
# =====================
FRONTEND_URL=http://localhost

# =====================
# Server / General
# =====================
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# =====================
# Rate Limiting (optional)
# =====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100